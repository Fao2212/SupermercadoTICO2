<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <!--
        ID CardView = tarjeta_categoria_busqueda
        ID Imagen categoria: imagen_categoria_busqueda
        ID textView nombre categoria: nombre_categoria_busqueda
        -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tarjeta_categoria_busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#219653"
        app:cardCornerRadius="30dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imagen_categoria_busqueda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/imagenproducto"
                android:scaleType="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagen_categoria_busqueda"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/nombre_categoria_busqueda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="CategorÃ­a:"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff" />

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>